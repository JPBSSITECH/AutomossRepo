<?xml version="1.0" encoding="UTF-8"?>
<module formtitle="Service Category"  
		formsubtitle="" 
		pageslug="servicecat" 
			primary="id" perpg_limit="10"  addbtn="1"   delbtn="1" editbtn="1"   issearch="1"  
			api_path='master/category'  
			pg_baseurl='admin/servicecat' 
	>  
 	
 	 
	<list>		 
		<col label="Category Name" db_nm="{{%name%}}" ></col>		 
		<col label="Category Info" db_nm="{{%info%}}" ></col>		 
		  
		 	 
		<col label="Created On" db_nm="{{%created_on%}}"></col>		 
		 <actions>
		 	<!-- <item label="Invoice Link" url_path="w_invoice" db_nm="id" ></item> -->
		 </actions>
		 
	</list> 
	<form >


		 
		<field col="4" label="Category Name" name="name" type="text" required="1" maxlength="20"   />
		<field col="12" label="Category Info" name="info" type="textarea" required="1"   />

		<field col="12" label="Thumbnail" required="1" upld_base_path="uploads/servicecat/"  name="thumb" type="slimcrop" img_w="600" img_h="600" box_w="200" box_h="200"   /> 
		 


	</form>    
</module> 